<table class="bg-white table table-bordered mb-0 mt-3">
       <tbody>
         <% @categoies.each do |category| %>
             <tr style="border: 2px solid #d2d2d2;">
               <td scope="row">
                 <div class="pl-5">
                   <h4><%= link_to category.title, category%><span class="ml-3 pl-5 h6">作者: <%= category.editer %></span></h4>
                 </div>
               </td>
             </tr>
         <% end %>
       </tbody>
     </table>
