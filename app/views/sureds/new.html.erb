<div class="form-row bg-light w-50 mt-2">
  <%= form_with(model: @sured, class: "mt-3",local: true) do |f| %>
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class: "form-control" %>

    <%= f.label :editer, "作者" %>
    <%= f.text_field :editer, value: "名無しさん", class: "form-control" %>

    <p>
    <%= f.label :category, 'カテゴリ' %>
    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |category| %>
      <%= category.label do %>
        <%= category.check_box %>
        <%= category.text %>
      <% end %>
    <% end %>
  </p>

    <%= f.submit "スレッドを立てる" , class: "btn btn-secondary mt-2" %>
  <% end %>
</div>
