
<header class="sticky-top ">
  <nav class="navbar navbar-white bg-white  navbar-expand-lg">
      <a class="navbar-brand mb-0 h1 text-dark " href="/login">掲示板(仮)</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <% if logged_in? %>
          <ul class="navbar-nav ml-auto">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                ユーザ設定
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                 <!-- link_to "User", users_path, class: "dropdown-item "  -->
                <%= link_to "ユーザー情報編集", edit_user_path(current_user), class: "dropdown-item" %>
                <%= link_to "ログアウト",  logout_path, method: :delete, class: "dropdown-item" %>
            </li>
          </ul>
        <% else %>
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link" href="<%= new_user_path %>">新規登録</a>
            </li>
            <li class="nav-item">
              <a class="nav-link " href="<%= login_path %>">ログイン</a>
            </li>
          </ul>
        <% end  %>
        <%= form_with(scope: :search, url: users_path, method: :get, local: true,class: "form-inline m-2 my-lg-0 row") do |f| %>
            <%= f.text_field :novel, class:"form-control mb-0 mr-sm-2 col-md-8",type: "search",placeholder:"Search","aria-label" => "Search"%>
            <%= f.submit "検索", class: "btn btn-outline-secondary col-md-3 mb-0"%>
          <% end %>
      </div>
    </nav>
  <hr class="mt-0 mb-0">
</header>
